// tsconfig.node.json
{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    // "allowImportingTsExtensions": true, // <--- 이 줄을 삭제하거나 주석 처리합니다.
    "isolatedModules": true,
    "moduleDetection": "force",
    // "noEmit": true, // 이전 단계에서 삭제 또는 주석 처리함

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"]
}